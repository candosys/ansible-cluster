spring:
  datasource:
    url: "jdbc:mysql://{{ data_alias }}:{{data_port}}/{{db_name}}?autoReconnect=true"
    username: "{{db_user}}"
    password: "{{db_user_password}}"
    driverClassName: "com.mysql.jdbc.Driver"
  jpa:
    database: "MYSQL"
    show-sql: true
    hibernate:
      ddl-auto: "update"
      dialect: "org.hibernate.dialect.MySQL5Dialect"
  data:
    elasticsearch:
      cluster-nodes: "{{ index_alias }}:{{index_discovery_port}}"
      cluster-name: "{{ es_cluster_name }}"
